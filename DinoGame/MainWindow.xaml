<Window x:Class="DinoGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DinoGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Playbtn" Content="PLAY" HorizontalAlignment="Left" Margin="336,72,0,0" VerticalAlignment="Top" Width="129" Height="62" Background="{x:Null}" FontSize="40" BorderBrush="{x:Null}" FontFamily="Segoe UI Black" Click="Button_Click"/>
        <Button x:Name="Stopbtn" Content="STOP" HorizontalAlignment="Left" Margin="299,276,0,0" VerticalAlignment="Top" Width="200" Height="60" Background="{x:Null}" FontSize="40" BorderBrush="{x:Null}" FontFamily="Segoe UI Black" Click="Stopbtn_Click"/>
        <Button x:Name="Scorebtn" Content="SCORE" HorizontalAlignment="Left" Margin="299,177,0,0" VerticalAlignment="Top" Width="200" Height="61" Background="{x:Null}" FontSize="40" BorderBrush="{x:Null}" FontFamily="Segoe UI Black" Click="Scorebtn_Click"/>

    </Grid>
</Window>
