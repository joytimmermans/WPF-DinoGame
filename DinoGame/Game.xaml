<Window x:Name="GameWindow" x:Class="DinoGame.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DinoGame"
        mc:Ignorable="d"
        Title="Game"  WindowStyle="None" WindowState="Maximized" KeyDown ="Game_KeyDown">
    <Canvas x:Name="GameVenster" HorizontalAlignment="Left" Height="0" VerticalAlignment="Top" Width="0" Background="#FFF7F7F7">
        <Label x:Name="lblScore" Content="Score: 0" FontSize="24" />
      <Button x:Name="btnRestart" Height="0" Width="0" Content="" BorderBrush="{x:Null}" Click="BtnRestart_Click">
        <Button.Background>
          <ImageBrush ImageSource="Images/Restart.png"/>
        </Button.Background>
      </Button>
        <TextBox Name="txtGebruiker" TextWrapping="Wrap"  Text="" Height="0" Width="0"/>
        <Label x:Name="lblTypeNaam" Content="Type je naam:" Width="0" FontWeight="Bold"/>
    </Canvas>
</Window>